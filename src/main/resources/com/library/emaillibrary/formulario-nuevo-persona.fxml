<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0" prefWidth="539.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.emaillibrary.controller.persona.NuevoPersonaController">
    <padding>
        <Insets top="20.0" />
    </padding>
    <children>
        <Label alignment="CENTER" prefHeight="48.0" prefWidth="548.0" text="Datos Persona">
            <font>
                <Font name="Arial Bold" size="36.0" />
            </font>
        </Label>
        <GridPane vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="245.0" minWidth="10.0" prefWidth="152.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="343.0" minWidth="10.0" prefWidth="304.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Label text="Nombre:" />
                <TextField fx:id="txtNombre" GridPane.columnIndex="1" />

                <Label text="Apellido Paterno:" GridPane.rowIndex="1" />
                <TextField fx:id="txtPaterno" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Apellido Materno:" GridPane.rowIndex="2" />
                <TextField fx:id="txtMaterno" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Fecha de nacimiento:" GridPane.rowIndex="3" />
                <DatePicker fx:id="dpFechaNac" prefHeight="26.0" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Fecha de fin (opcional):" GridPane.rowIndex="4" />
                <DatePicker fx:id="dpFechaFin" prefHeight="26.0" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Departamentos:" GridPane.rowIndex="5" />
                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
                    <children>
                        <Button fx:id="btnSeleccionarDeptos" mnemonicParsing="false" onAction="#actionBuscarDepartamentos" prefWidth="300.0" text="Gestionar Departamentos" />
                        <Label fx:id="lblDeptosSeleccionados" text="Ninguno seleccionado" textFill="#6b6b6b" wrapText="true">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" prefHeight="65.0" prefWidth="511.0" spacing="20.0">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Button mnemonicParsing="false" onAction="#actionGuardar" text="Guardar" />
                <Button mnemonicParsing="false" onAction="#actionCancelar" text="Cancelar" />
            </children>
        </HBox>
    </children>
</VBox>